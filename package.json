{
  "name": "saros",
  "version": "0.0.1",
  "description": "CLI tool to count lines",
  "main": "dist/index",
  "bin": "dist/bin",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:dist": "tsc",
    "build:exe": "pkg dist/bin.js --output release/saros",
    "build:win-x64": "pkg dist/bin.js --target node12-win-x64 --output release/win-x64/saros",
    "build:mac-x64": "pkg dist/bin.js --target node12-mac-x64 --output release/mac-x64/saros",
    "build:linux-x64": "pkg dist/bin.js --target node12-linux-x64 --output release/linux-x64/saros",
    "build": "npm run build:dist && npm run build:exe",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --fix --ext .ts",
    "test": "set DEBUG=saros:* && ava-ts test/**/*.spec.ts",
    "coverage": "nyc npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dotvirus/saros.git"
  },
  "keywords": [
    "line counter",
    "cli"
  ],
  "author": "dotvirus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dotvirus/saros/issues"
  },
  "homepage": "https://github.com/dotvirus/saros#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.0.11",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "ava-ts": "^0.25.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "nyc": "^15.1.0",
    "pkg": "^4.4.8",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "micromatch": "^4.0.2",
    "yaml": "^1.10.0",
    "yargs": "^15.3.1"
  }
}
